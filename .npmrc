# Save exact versions of packages (no ^ or ~)
save-exact=true

# Avoid audit spam
audit=false

# Use legacy peer deps to resolve Tailwind/Next/Autoprefixer issues during install
legacy-peer-deps=true

# Avoid package-lock.json rewriting unless necessary
package-lock=true

# Set default registry (in case something overrides it)
registry=https://registry.npmjs.org/

# Vercelâ€™s build system might need this for caching and deterministic builds
prefer-offline=true
